<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-5">
            <form action="/restaurants" method="POST" id="resForm" >

                <div class="mb-3">
                    <label for="name" class="form-label">中文名稱*</label>
                    <input id="name" type="text" name="name" maxlength="10" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="name_en" class="form-label">英文名稱*</label>
                    <input id="name_en" type="text" name="name_en" maxlength="30" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">分類*</label>
                    <select id="category" name="category" class="form-select" aria-label="category selection" required>

                        <option value="全部" disabled> 所有分類 </option>
                        <option value="中東料理"> 中東料理 </option>
                        <option value="日本料理"> 日本料理 </option>
                        <option value="義式餐廳"> 義式餐廳 </option>
                        <option value="美式"> 美式 </option>
                        <option value="酒吧"> 酒吧 </option>
                        <option value="咖啡"> 咖啡 </option>
                        <option value="其他"> 其他 </option>

                    </select>

                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">電話</label>
                    <input id="phone" name="phone" type="tel" class="form-control" maxlength="13" required>
                </div>


                <div class="mb-3">
                    <label for="location" class="form-label">地址</label>
                    <input id="location" name="location" type="text" class="form-control" maxlength="30"  required>
                </div>

                <div class="mb-3">
                    <label for="rating" class="form-label">評分*</label>
                    <div class="input-group">
                        <input id="rating" name="rating" type="number" class="form-control" min="0" max="5" step="0.1" required>
                    </div>
                    <div id="rating-error" style="color:red;"></div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">圖片URL*</label>
                    <div class="input-group">
                        <input id="image" name="image" type="url" class="form-control" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">簡介</label>
                    <div class="input-group">
                        <input id="description" name="description" type="text-area" row="5" class="form-control" maxlength="200" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="google_map" class="form-label">Google Map</label>
                    <div class="input-group">
                        <input id="google_map" name="google_map" type="url" class="form-control" required>
                    </div>
                </div>

                <p id="errorMessage" hidden></p>

                <div class="col-12">
                    <button class="btn btn-primary" type="submit" value="SUBMIT">新增</button>
                </div>

            </form>
        </div>
    </div>
</div>